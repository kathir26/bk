		<update handle="editor"/>
		<reference name="head">
			 <action method="setCanLoadTinyMce"><load>1</load></action>
		</reference>
        <reference name="head">
			<action method="addCss">
				<stylesheeet>css/Muvacon/Events/events.css</stylesheeet>
			</action>
			<action method="addJs">
				<script>Muvacon/Events/jquery.min.js</script>
			</action>
			<action method="addJs">
				<script>Muvacon/Events/events.js</script>
			</action>
        </reference>
    </adminhtml_events_edit>
